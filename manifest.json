{
  "manifest_version": 2,

  "name": "color-modifier",
  "description": "This extension allows the user to modify the colors of the page.",
  "version": "1.0",

  "page_action": {
    "default_icon": "img/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["scripts/content_script.js"]
    }
  ],

  "permissions": ["http://*/*", "https://*/*"]
}